{
  "extends": "@tsconfig/node16/tsconfig.json",
  "version": "4.4.2",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./compiled",
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "paths": {
      "@app/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "ts-node": {
    // tsconfig-paths is needed by ts-node to resolve @app/* paths. ESLint resolves them separately.
    "require": ["tsconfig-paths/register"]
  }
}
